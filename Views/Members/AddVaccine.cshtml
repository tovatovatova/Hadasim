@model COVID_19_Hadasim_.Models.Vaccine

@{
    ViewData["Title"] = "Add Vaccine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Vaccine for Member</h1>

<h4>Vaccine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddVaccine">
            <input type="hidden" asp-for="MemberID" value="@ViewBag.MemberId" />
            <div class="form-group">
                <label asp-for="VaccineNumber" class="control-label"></label>
                <select asp-for="VaccineNumber" class="form-control">
                    @foreach (var vaccineNumber in ViewBag.AvailableVaccineNumbers)
                    {
                        <option value="@vaccineNumber">@vaccineNumber</option>
                    }
                </select>
                <span asp-validation-for="VaccineNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VaccineDate" class="control-label"></label>
                <input asp-for="VaccineDate" class="form-control" />
                <span asp-validation-for="VaccineDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VaccineManufacturer" class="control-label"></label>
                <input asp-for="VaccineManufacturer" class="form-control" />
                <span asp-validation-for="VaccineManufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Vaccine" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
